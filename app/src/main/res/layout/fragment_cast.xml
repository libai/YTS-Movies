<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <view
            app:border_color="@color/color_green_dark"
            app:border_width="2dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/director_img"
            class="de.hdodenhof.circleimageview.CircleImageView" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingLeft="16dp"
                android:paddingBottom="5dp"
                android:textColor="@color/color_orange_dark"
                android:textSize="20sp"
                android:text="@string/directed_by"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/director"
                android:paddingLeft="16dp"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:paddingTop="5dp"
                tools:text="SOME DIRECTOR"/>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

       <ImageView
           android:layout_width="0dp"
           android:layout_height="100dp"
           tools:background="#fff"
           android:layout_weight="1"
           android:id="@+id/actorImg1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:id="@+id/actorName1"
            tools:text="ACTOR NAME as \nCharacter name"
            android:gravity="center|left"
            android:paddingLeft="16dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            tools:background="#fff"
            android:layout_weight="1"
            android:id="@+id/actorImg2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:id="@+id/actorName2"
            android:textColor="@color/black"
            tools:text="ACTOR NAME as \nCharacter name"
            android:gravity="center|left"
            android:paddingLeft="16dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            tools:background="#fff"
            android:layout_weight="1"
            android:id="@+id/actorImg3"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:id="@+id/actorName3"
            tools:text="ACTOR NAME as \nCharacter name"
            android:gravity="center|left"
            android:paddingLeft="16dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            tools:background="#fff"
            android:layout_weight="1"
            android:id="@+id/actorImg4"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:textColor="@color/black"
            android:id="@+id/actorName4"
            tools:text="ACTOR NAME as \nCharacter name"
            android:gravity="center|left"
            android:paddingLeft="16dp"/>
    </LinearLayout>

</LinearLayout>
</ScrollView>