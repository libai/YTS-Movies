<resources>

    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/color_green_light</item>
        <item name="android:colorPrimaryDark">@color/color_green_dark</item>
        <item name="android:navigationBarColor">@color/color_green_light</item>
        <item name="android:colorAccent">@color/color_orange_light</item>
